{
    admin off
    log {
        level debug
    }
}

:8080 {
    route {
        caddy_mib {
            error_codes 404       # Track 404 errors
            max_error_count 5     # Number of errors allowed before ban
            ban_duration 10m      # Ban duration for violating IPs
            output stdout         # Log output (stdout/stderr)
        }
        file_server {
            root /var/www/html
        }
    }
    log {
        output stdout
        format json
    }
}
